<div id="page-streamtarget" class="container">
  <div class="columns">
    <div class="column">
      <h1>Stream Target</h1>
    </div>
  </div>
  <div class="columns">
    <div class="column">
      <%= form_with(url: request.fullpath, method: "post") do %>

      <div class="field">
        <label class="label">Profile Name</label>
        <div class="control">
          <input class="input" type="text" name="profile" placeholder="Profile Name">
        </div>
      </div>

      <div class="field">
        <label class="label">Input Stream</label>
        <div class="control">
          <div class="select">
            <select name="input">
              <option value="">--- Select Input ---</option>
              <% @input_stream.each do | input | %>
              <option value="<%= input["name"] %>"><%= input["name"]%></option>
              <% end %>
            </select>
          </div>
        </div>
      </div>

      <div class="field">
        <label class="label">Platform</label>
        <div class="control">
          <div class="select">
            <select name="platform">
              <option value="">--- Select Platform ---</option>
              <option value="etslive">ETS Live</option>
              <option value="facebook">Facebook</option>
              <option value="youtube">Youtube</option>
              <option value="custom">Custom RTMP</option>
            </select>
          </div>
        </div>
      </div>

      <div class="field">
        <label class="label">Target Stream Name / Key</label>
        <div class="control">
          <input class="input" type="text" name="target_key" placeholder="Stream Key">
        </div>
      </div>

      <div class="field is-grouped">
        <div class="control">
          <button class="button is-link">Submit</button>
        </div>
        <div class="control">
          <button class="button is-link is-light">Cancel</button>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
