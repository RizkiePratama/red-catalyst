<div id="page-transcode-profile-new" class="container">
  <div class="columns">
    <div class="column">
      <h1>Create New Transcode Profile</h1>
    </div>
  </div>
  <div class="columns">
    <div class="column">
      <form action="<%= env['REQUEST_URI'] %>" accept-charset="UTF-8" data-remote="true" method="post"  enctype="multipart/form-data" >
        <div class="field">
          <label class="label">Overlay Name</label>
          <div class="control">
            <input id="OverlayName" class="input" type="text" name="name" placeholder="Overlay Name" required>
          </div>
        </div>

        <div class="field">
          <label class="label">Overlay Image</label>
          <input id="OverlayImage" class="input" type="file" name="image" required>
        </div>

        <div class="field is-grouped">
          <div class="control">
            <button class="button is-link">Submit</button>
          </div>
          <div class="control">
            <button class="button is-link is-light" onclick="history.back()">Cancel</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<% if params['action'] == "edit" %>
<script>
$(document).ready(function() {
  var overlay_data = <%= @overlay_data %>;
  $('#OverlayName').val(overlay_data.name);
});
</script>
<% end %>